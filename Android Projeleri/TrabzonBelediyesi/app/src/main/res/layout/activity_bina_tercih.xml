<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.feyzullah.trabzonbelediyesi.trabzonbelediyesi_binayeriyol.Bina_tercih">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YENİ EKLE"
            android:layout_marginBottom="5dp"
            android:id="@+id/Bina_yeniekleBTN" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAYITLARI GÖR / GÜNCELLE / SİL"
            android:layout_marginBottom="5dp"
            android:id="@+id/Bina_kayitgorBTN" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXCEL Dosyası Oluştur"
            android:layout_marginBottom="5dp"
            android:id="@+id/Bina_excelBTN" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="danger"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veritabanı Temizle!"
            android:layout_marginTop="10dp"
            android:id="@+id/Bina_silBTN" />

    </LinearLayout>
</RelativeLayout>
