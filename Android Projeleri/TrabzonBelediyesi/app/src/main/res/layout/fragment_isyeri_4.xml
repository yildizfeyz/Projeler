<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feyzullah.trabzonbelediyesi.trabzonbelediyesi_binayeriyol.Isyeri_4">

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adı Soyadı"
                android:id="@+id/textView"
                android:textColor="#FA5"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/adisoyadi"
                android:gravity="center"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TC No"
                android:id="@+id/textView2"
                android:textColor="#FA5"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@id/adisoyadi"
                android:layout_alignLeft="@id/adisoyadi"
                android:layout_alignStart="@id/adisoyadi"
                android:layout_marginTop="56dp"
                android:layout_alignRight="@id/adisoyadi"
                android:layout_alignEnd="@id/adisoyadi" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tcno"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vergi No"
                android:id="@+id/textView3"
                android:textColor="#FA5"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@id/tcno"
                android:layout_alignLeft="@id/tcno"
                android:layout_alignStart="@id/tcno"
                android:layout_marginTop="56dp"
                android:layout_alignRight="@id/tcno"
                android:layout_alignEnd="@id/tcno" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vergino"
                android:layout_below="@id/textView3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
